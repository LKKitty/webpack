// 字体
font-dpr($font-size)
  font-size: $font-size
  [data-dpr="2"] &
    font-size: $font-size * 2
  [data-dpr="3"] &
    font-size: $font-size * 3

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    right: -10px
    bottom: -10px
    left: -10px
